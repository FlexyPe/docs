{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "FlexyPe",
  "description": "Simple 1-click checkout built for Shopify. Boost conversions with a seamless, high-converting experience",
  "colors": {
    "primary": "#2f72ff",
    "light": "#5c94ff",
    "dark": "#255acc"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "groups": [
      {
        "group": "Get Started",
        "pages": ["introduction"]
      },
      {
        "group": "Integrations",
        "pages": [
          {
            "group": "Payment Providers",
            "pages": ["integrations/payment/payu", "integrations/payment/cashfree"]
          },
          {
            "group": "Analytics",
            "pages": [
              "/integrations/analytics/meta",
              "/integrations/analytics/google-ads",
              "/integrations/analytics/google-analytics"
            ]
          }
        ]
      },
      {
        "group": "Essentials",
        "pages": [
          "essentials/markdown",
          "essentials/code",
          "essentials/images",
          "essentials/settings",
          "essentials/navigation",
          "essentials/reusable-snippets"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://flexype.io",
          "icon": "globe"
        },
        {
          "anchor": "Blog",
          "href": "https://flexype.io/blogs",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@flexype.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.flexype.io"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/FlexyPe",
      "linkedin": "https://linkedin.com/company/flexype"
    }
  }
}
