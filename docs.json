{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "FlexyPe",
  "description": "Simple 1-click checkout built for Shopify. Boost conversions with a seamless, high-converting experience",
  "favicon": "/flexy-favicon.svg",
  "logo": {
    "light": "/logo/flexy-light.svg",
    "dark": "/logo/flexy-dark.svg"
  },
  "appearance": {
    "default": "system"
  },
  "colors": {
    "primary": "#2f72ff",
    "light": "#5c94ff",
    "dark": "#255acc"
  },
  "background": {
    "decoration": "grid"
  },
  "navigation": {
    "groups": [
      {
        "group": "Get Started",
        "pages": ["introduction", "onboarding"]
      },
      {
        "group": "Integrations",
        "pages": [
          {
            "group": "Payment Providers",
            "pages": [
              "integrations/payment/razorpay",
              "integrations/payment/cc-avenue",
              "integrations/payment/phonepe",
              "integrations/payment/cashfree",
              "integrations/payment/easebuzz",
              "integrations/payment/payu",
              "integrations/payment/xpay",
              "integrations/payment/snapmint"
            ]
          },
          {
            "group": "Analytics",
            "pages": [
              "/integrations/analytics/meta",
              "/integrations/analytics/google-ads",
              "/integrations/analytics/google-analytics"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://flexype.io",
          "icon": "globe"
        },
        {
          "anchor": "Blog",
          "href": "https://flexype.io/blogs",
          "icon": "newspaper"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@flexype.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.flexype.io"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/FlexyPe",
      "linkedin": "https://linkedin.com/company/flexype"
    }
  }
}
